<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inn App Purchase By Ucdemir"
            android:textStyle="bold"
            android:textSize="32dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Products"
            android:id="@+id/btnPro"
            ></Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="34dp"
            android:textAlignment="textEnd"
            android:layout_marginRight="25dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Status of Bor:"
                android:textAlignment="textEnd"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:id="@+id/statusOfBor"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status of Gas:"
                android:textAlignment="textEnd"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txtPriceOfGas"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:id="@+id/statusOfGas"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status of NoAds:"
                android:textAlignment="textEnd"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txtPriceOfNoAds"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:id="@+id/statusOfNoads"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status of Pro:"
                android:textAlignment="textEnd"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txtPriceOfPro"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:id="@+id/statusOfPro"
                android:gravity="center"
                ></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status of Sun:"
                android:textAlignment="textEnd"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txtPriceOfSun"
                >
            </TextView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"

                android:id="@+id/statusOfSun"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
    </LinearLayout>



    </ScrollView>
</layout>